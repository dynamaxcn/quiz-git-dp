<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- 黑名单号码 -->

    <TextView
        android:layout_marginLeft="5dip"
        android:id="@+id/tv_item_black_lv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="110" />
    <!-- 拦截模式 -->

    <TextView
        android:layout_marginLeft="5dip"
        android:id="@+id/tv_item_black_lv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_black_lv_number"
        android:text="短信拦截" />
    <!-- 删除黑名单的按钮 -->

    <ImageView
        android:id="@+id/iv_item_black_lv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:src="@drawable/item_black_delete_selector" />

</RelativeLayout>