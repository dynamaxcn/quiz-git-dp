<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/tv_dialog_setpass_title"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/blue_bkg"
        android:gravity="center"
        android:text="设置密码"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <!-- password1 -->

    <EditText
        android:id="@+id/et_dialog_setpass_passone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#aa000000" />
    <!-- password2 -->

    <EditText
        android:id="@+id/et_dialog_setpass_passtwo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#aa000000" />
    <!-- 两个按钮 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dialog_setpass_enter"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_bt_selector"
            android:text="确认"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bt_dialog_setpass_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_bt_selector"
            android:text="取消"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>