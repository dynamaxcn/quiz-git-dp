<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_item_dialog_lv_style"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/call_locate_blue" />

    <TextView
        android:id="@+id/tv_item_dialog_lv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_dialog_lv_style"
        android:gravity="center_vertical"
        android:text="金属灰"
        android:textSize="22sp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_item_dialog_lv_select"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/list_icon_security" />

</RelativeLayout>