<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_item_appmanager_lv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heima" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/iv_item_appmanager_lv_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_appmanager_lv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="黑马卫士"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_appmanager_lv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rom"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:id="@+id/tv_item_appmanager_lv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18.0mb"
        android:textSize="20sp" />

</RelativeLayout>